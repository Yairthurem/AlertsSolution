{
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=FlightAlertsDb;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "Logging": {
        "LogLevel": {
            "Default": "Warning" // Default log level for the ASP.NET Core logging framework
        }
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Information", // Minimum log level for Serilog
            "Override": {
                "Microsoft": "Warning", // Override log level for Microsoft logs
                "System": "Warning" // Override log level for System logs
            }
        },
        "WriteTo": [
            {
                "Name": "File", // Write logs to a file
                "Args": {
                    "path": "logs/log.txt",
                    "rollingInterval": "Day", // Create a new log file each day
                    "retainedFileCountLimit": 7 // Keep logs for the past 7 days
                }
            }
        ]
    },
    "AllowedHosts": "*"

}